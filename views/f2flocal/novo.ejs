<% layout('/layouts/boilerplate') %>
    <div class="row">

        <div class="col-6 offset-3">
            <h1 class="text-center">Novo local de captação:</h1>
            <div class="card shadow">
                <div class="card-body">

                    <form action="/f2flocal" method="POST" novalidate class="needs-validation"
                        enctype="multipart/form-data">
                        <div class='mb-3'>
                            <label class='form-label' for="nome">Nome:</label><br>
                            <input class='form-control' type="text" name="local[nome]" id="nome" required>
                        </div>
                        <div class='mb-3'>
                            <label class='form-label' for="descricao">Descrição</label><br>
                            <textarea class='form-control' type="text" name="local[descricao]" id="descricao"
                                required></textarea>
                        </div>
                        <div class='mb-3'>
                            <label class='form-label' for="imagem">Imagem URL:</label><br>
                            <input class='form-control' type="file" name="image" id="imagem" multiple required>
                        </div>
                        <div class='mb-3'>
                            <label class='form-label' for="endereco">Endereço:</label><br>
                            <input class='form-control' type="text" name="local[endereco]" id="endereco" required>
                        </div>
                        <div class='mb-3'>
                            <label class='form-label' for="doadores">Doadores:</label><br>
                            <input class='form-control' type="text" name="local[doadores]" id="doadores" required>
                        </div>

                        <footer>
                            <a class='btn btn-danger' href="/f2flocal">Voltar</a> <button
                                class='btn btn-success'>Adicionar
                                novo
                                local</button>
                        </footer>
                    </form>
                </div>
            </div>
        </div>
    </div>